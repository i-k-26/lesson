import java.util.ArrayList;

public class ListPractice {

	public static void main(String[] args) {

		Person sato = new Person("sato", 28);
		System.out.println(sato.name + sato.age);
		Person monzen = new Person("monzen", 22);
		System.out.println(monzen.name + monzen.age);
		Person suzuki = new Person("suzuki", 31);
		System.out.println(suzuki.name + suzuki.age);

		ArrayList<String> personList = new ArrayList<String>();

		personList.add("sato");
		personList.add("28");
		personList.add("monzen");
		personList.add("22");
		personList.add("suzuki");
		personList.add("31");

		for (String s : personList) {
			System.out.println(s + "は" + s + "才");

		}
	}
}
